{
  "name": "egora-clone-backend-node",
  "version": "1.0.0",
  "description": "Backend server with Node.js, Express, TypeScript, Prisma, and PostgreSQL",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon",
    "prebuild": "rm -rf dist",
    "build": "tsc && cp data-source.ts dist/",
    "postinstall": "npm run build",
    "start": "node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs -d data-source.ts",
    "migration:generate": "npm run typeorm -- migration:generate src/migrations/Migration",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "db:sync": "npm run typeorm -- schema:sync",
    "render-build": "npm ci && npm run build && npm run migration:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.3.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26",
    "typescript": "^5.9.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
